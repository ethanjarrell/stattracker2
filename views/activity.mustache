                      <option value="40" name="minute">40</option>
                      <option value="41" name="minute">41</option>
                      <option value="42" name="minute">42</option>
                      <option value="43" name="minute">43</option>
                      <option value="44" name="minute">44</option>
                      <option value="45" name="minute">45</option>
                      <option value="46" name="minute">46</option>
                      <option value="47" name="minute">47</option>
                      <option value="48" name="minute">48</option>
                      <option value="49" name="minute">49</option>
                      <option value="50" name="minute">50</option>
                      <option value="51" name="minute">51</option>
                      <option value="52" name="minute">52</option>
                      <option value="53" name="minute">53</option>
                      <option value="54" name="minute">54</option>
                      <option value="55" name="minute">55</option>
                      <option value="56" name="minute">56</option>
                      <option value="57" name="minute">57</option>
                      <option value="58" name="minute">58</option>
                      <option value="59" name="minute">59</option>
                      </select>
                  </div>

                  <div class="inputContainer5">
                    <div class="title2">am/pm</div>
                    <select name="am_pm" autocomplete="off" class="tiny" required>
                      <option class="grayOption" value="" disabled selected>am</option>
                      <option value="am" name="am_pm">am</option>
                      <option value="pm" name="am_pm">pm</option>
                      </select>
                  </div>

                </div>

              </div>

            </div>

          </div>

          <input class="form__submit-button" type="submit">

        </div>
      </form>

      <div><a class="back2cat" href="/api/home">back to all categories</a></div>

    </div>





    <div class="activityname">
      <div class="title1container">
        <div class="title1">Step 4: Click on an Activity to See More Information About a Specific Activity</div>
      </div>

      {{#activities}}

        <div class="categoryTitle">
          <span class="bold">{{category}}<span>

      </div>

      <div class="activityDateContainer">

        <div class="bold2">
          <label class="bold2label">User</label>
          <div>{{user}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Category</label>
          <div>{{category}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Activity</label>
          <div>{{activity_name}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Quantity</label>
          <div>{{quantity}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Metric</label>
          <div>{{metric}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Day</label>
          <div>{{day_of_week}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Date</label>
          <div>{{month}}, {{day}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Year</label>
          <div>{{year}}</div>
        </div>

        <div class="bold2">
          <label class="bold2label">Time</label>
          <div>{{hour}}:{{minute}}{{am_pm}}</div>
        </div>

    </div>
    {{/activities}}
    <div><a class="back2cat" href="/api/home">back to all categories</a></div>

  </div>


  </div>

</body>

</html>
